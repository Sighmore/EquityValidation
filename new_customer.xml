<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_bg"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="com.example.equityvalidation.CustomerNew">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/imgView_logo"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/equitylogo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="CUSTOMER DETAILS"
        android:textAllCaps="true"
        android:fontFamily="sans-serif-light"
        android:textColor="@android:color/white"
        android:textSize="26sp"
        android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_fullnames"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="Full Names:              "
            android:textSize="15dp"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/white"
            />

        <EditText
            android:id="@+id/etFullNames"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="@string/full_name"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
            android:inputType="textPersonName"
            android:padding="7dp"
            android:textSize="15sp"
            android:fontFamily="sans-serif-light"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/em_bg"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_idno"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="ID NO:"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/etIdNo"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="identity number"
            android:maxLength="20"
            android:inputType="textPersonName"
            android:padding="7dp"
            android:textSize="15sp"
            android:fontFamily="sans-serif-light"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/em_bg"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_gender"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="Gender:"
            android:textSize="15dp"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/white"
            />
        <Spinner
            android:id="@+id/gender_spinner"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="7dp"
            android:textSize="15sp"
            android:fontFamily="sans-serif-light"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/em_bg"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_phoneno"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="Phone Number:"
            android:textSize="15dp"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/white"
            />

        <EditText
            android:id="@+id/etPhoneNo"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="Phone no."
            android:inputType="number"
            android:maxLength="13"
            android:digits="+0123456789"
            android:padding="7dp"
            android:textSize="15sp"
            android:fontFamily="sans-serif-light"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/em_bg" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_address"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="Address:"
            android:textSize="15dp"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/white"
            />

        <EditText
            android:id="@+id/etAddress"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="Address"
            android:inputType="textPersonName"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ-()0123456789 "
            android:maxLength="30"
            android:padding="7dp"
            android:textSize="15sp"
            android:fontFamily="sans-serif-light"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/em_bg"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dob"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="Date of Birth:"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/etDOB"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/em_bg"
            android:clickable="true"
            android:minDate="01/01/1920"
            android:maxDate="01/01/2000"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:fontFamily="sans-serif-light"
            android:hint="DoB"
            android:padding="7dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="15sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_nokname"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="Next of Kin Name:"
            android:textSize="15dp"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/white"
            />

        <EditText
            android:id="@+id/etNOKName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="NOK Name"
            android:inputType="textPersonName"
            android:maxLength="40"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
            android:padding="7dp"
            android:textSize="15sp"
            android:fontFamily="sans-serif-light"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/em_bg"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_nokphoneno"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="NOK Phone No.:"
            android:textSize="15dp"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/white"
            />

        <EditText
            android:id="@+id/etNOKPhoneNo"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="Nok Phone No"
            android:inputType="number"
            android:digits="+0123456789"
            android:padding="7dp"
            android:maxLength="15"
            android:textSize="15sp"
            android:fontFamily="sans-serif-light"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/em_bg"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_occupation"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="Occupation:"
            android:textSize="15dp"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/white"
            />

        <EditText
            android:id="@+id/etOccupation"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="Occupation"
            android:inputType="textPersonName"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
            android:padding="7dp"
            android:textSize="15sp"
            android:fontFamily="sans-serif-light"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/em_bg"/>
    </LinearLayout>
    <Button
        android:id="@+id/btnContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#f05924"
        android:text="@string/proceed"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Go to the home page?"
        android:textColor="#ccc" />

    <Button
        android:id="@+id/btnDashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#aaa"
        android:text="@string/dashboard"
        android:textColor="@android:color/white" />

</LinearLayout>